@page "/persons/create"
@inject IRepository repository
@inject NavigationManager nav
@inject SweetAlertService swl

<h3>Create new day to the week</h3>


<PersonForm @ref="personForm" Person="person" OnValidSubmit="CreateAsync" ReturnAction="Return" />

@code {
    private Person person = new();
    private PersonForm? personForm;

    private async Task CreateAsync()
    {
        
        var httpResponse = await repository.Post("/api/persons", person);
        if (httpResponse.Error)
        {
            var message = await httpResponse.GetErrorMessageAsync();
            await swl.FireAsync("Error", message, SweetAlertIcon.Error);
            return;
        }

        Return();
    }

    private void Return()
    {
        personForm!.FormPostedSuccessFully = true;
        nav.NavigateTo($"/persons");
    }
}