@using TwinsBrushMVC.Data.Entities;
@model IEnumerable<TwinsBrushMVC.Data.Entities.Country>;
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-success" asp-action="CountryCreate">New Country</a>
<br />
<hr />
<button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#AddCountry" onclick="AddCountry">
    Add New Country
</button>



<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Countries</h3>
            </div>
            <div class="panel-body">
                <table class="table table-bordered table-hover" id="CountryTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model=>model.Name)
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                responsive: true,
                "aLengthMenu": [
                    [5, 25, 50, 100, 200, -1],
                    [5, 25, 50, 100, 200, "All"]
                ]
            });
        });
    </script>
    <script>
        function AddCountry() {
            $.ajax({
                type: "Get",
                url: "/Countries/Create",
                success: function (result) {
                    $("#CountryTable").html(result);
                    $("#AddCountry").modal('show');

                }
            });
        }
    </script>
}