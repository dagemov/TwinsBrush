@model TwinsBrushMVC.Data.Entities.Country

@{
    ViewData["Title"] = "Create new Country";
}
<h3 class="text-black text-center">New Country</h3>
<div class="row">
    <form asp-action="CountryCreate" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="States" />

        <label asp-for="Name" class="custom-control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="form-group mt-3">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success mt">Back to List</a>
        </div>
    </form>
</div>

